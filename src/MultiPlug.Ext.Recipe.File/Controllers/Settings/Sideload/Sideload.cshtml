@model MultiPlug.Base.Http.EdgeApp

<section class="row-fluid">
    @Include("MultiPlug.Ext.Recipe.File.RecipeFile_Navigation")
    <form class="form-horizontal" method="post" action="" accept-charset="utf-8" enctype="multipart/form-data">
        <div class="row-fluid">
            <div class="box">
                <h4>Sideload</h4>
                <div class="row-fluid well">
                    <p>You can sideload a recipe file here. It will need to be <a href="@Raw(Model.Context.Paths.Home)">Pushed</a> to MultiPlug after sideload. </p>
                    <div class="row-fluid">
                        <div class="span4">
                            File:
                        </div>
                        <div class="span3">
                            Into Recipe:
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4">
                            <input type="file" id="sideloadFile" class="form-control" name="file" accept=".json">
                        </div>
                        <div class="span3">
                            <select class="input-block-level" name="into">
                                <option value="Main">Main</option>
                                @foreach (var Snapshot in @Model.Extension.Model.SnapShots)
                                {
                                    <option value="@Snapshot">@Snapshot</option>
                                }
                            </select>
                        </div>
                        <div class="span3">
                            <button type="submit" class="btn btn-green">Sideload</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

