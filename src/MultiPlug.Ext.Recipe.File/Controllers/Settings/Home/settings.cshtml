@model MultiPlug.Base.Http.EdgeApp

<section class="row-fluid">

    <div class="row-fluid">
        <div class="box">

            <div class="span12">
                <p style="font-size:22.75px; padding-top:10px; text-align: center;">Simple File Configurator</p>
            </div>

        </div>
    </div>

    <div class="row-fluid">

            <div class="box">

                <div class="row-fluid">
                    <h3>File</h3>

                    <div class="control-group">
                        <label class="control-label" >File Path</label>
                        <div class="controls">
                            <input name="FileLocation" class="input-block-level uneditable-input" type="text" id="Param_NodeId" placeholder="c:/" value="@Model.Extension.Model.FilePath">
                        </div>
                    </div>
                    <p>Last read at: @Model.Extension.Model.LastRead</p>
                    <p>Last write at: @Model.Extension.Model.LastWrite</p>
                </div>

                <div class="row-fluid">

                    <h3>Extension Configurations</h3>
                    <p>These are the configurations found within the file.</p>

                    <ul>
                        @foreach (var Extension in @Model.Extension.Model.ExtensionNames)
                        {
                            <li>
                                <a href="@Raw(Model.Context.Paths.Home)editor/@Extension" >@Extension</a>
                                <a href="@Raw(Model.Context.Paths.APIs)download/@(Extension).json" download>Download</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
    </div>

</section>


